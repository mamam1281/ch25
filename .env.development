# Frontend Environment Variables for Local Development
# Vite automatically loads this file in development

# API URLs (local backend)
VITE_API_URL=http://localhost:8000/api
VITE_ADMIN_API_URL=http://localhost:8000/admin/api

# Environment
VITE_ENV=development

# Feature Flags
# Enable demo fallback: uses mock data when API fails
VITE_ENABLE_DEMO_FALLBACK=true

# Disable feature gate: allows access to all games regardless of today's schedule
VITE_GATE_TODAY_FEATURE=false

# Enable debug mode
VITE_ENABLE_DEBUG=true
XP_FROM_GAME_REWARD=true