# Development environment variables
# Copy this to .env for local development

# Database Configuration (Local)
DATABASE_URL=mysql+pymysql://root:root@localhost:3306/xmas_event_dev
# For PostgreSQL: postgresql://postgres:postgres@localhost:5432/xmas_event_dev

# JWT Configuration
JWT_SECRET=local-dev-secret-key-change-in-production-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Environment
ENV=local

# CORS (Allow local frontend)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]

# Redis (Optional - comment out if not using)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=DEBUG

# Timezone
TIMEZONE=Asia/Seoul

# MySQL credentials for Docker Compose (local)
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=xmas_event_dev
MYSQL_USER=xmasuser
MYSQL_PASSWORD=xmaspass
XP_FROM_GAME_REWARD=true
